namespace "http://rb.lichtflut.de/common#"       prefix  "common"
namespace "http://rb.lichtflut.de/common/food/"  prefix  "food"

schema for "food:Recipe" {

	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		datatype : "String"
	}
	property "common:hasShortDescription" [0..1] {
		field-label : "Short Description"
		field-label[de] : "Kurzbeschreibung/Zusatzinfo"
		datatype : "String"
	}
	
	property "common:hasQuantity" [1..1] {
		field-label : "Quantity"
		field-label [de]: "Portionen"
		datatype : "Integer"
	}
	
	property "food:hasIngredients" [1..n] {
		field-label : "Ingredients"
		field-label[de] : "Zutaten"
		datatype : "Resource"
		resource-constraint : "food:Ingredient"
	}

	property "food:hasProcessStep" [1..1] {
		field-label : "Process Step"
		field-label[de] : "Zubereitungsschritte"
		datatype : "Text"
	}

	property "food:hasPreparationTime" [0..1] {
		field-label : "Preparation Time"
		field-label[de] : "Zubereitungszeit"
		datatype : "Integer"
	}

	property "food:hasCookingTime" [0..1] {
		field-label : "Cooking/Baking Time"
		field-label[de] : "Koch-/Backzeit"
		datatype : "Integer"
	}
	
	property "food:hasWaitingTime" [0..1] {
		field-label : "Waiting Time"
		field-label[de] : "Warte-/Ruhezeit"
		datatype : "Integer"
	}
	property "food:hasKitchenUtensils" [0..n] {
		field-label : "Kitchen Utensils"
		field-label[de] : "Benötigte Küchengeräte"
		datatype : "Resource"
		resource-constraint : "food:Machine"
	}
		
	property "food:hasTypeOfMeal" [1..1] {
		field-label : "Type of Meal"
		field-label[de] : "Menükategorie"
		datatype : "Resource"
		resource-constraint : "food:TypeOfMeal"
	}	

	property "food:hasDifficulty" [1..1] {
		field-label : "Degree of Difficulty"
		field-label[de] : "Schwierigkeitsgrad"
		datatype : "Resource"
		resource-constraint : "food:Difficulty"
	}

	property "food:hasCountryOfOrigin" [0..n] {
		field-label : "Country of Origin"
		field-label[de] : "Herkunftsland"
		datatype : "Resource"
		resource-constraint : "common:Country"
	}
	
	property "food:hasSpiciness" [0..1] {
		field-label : "Degree of Spiciness"
		field-label[de] : "Schärfegrad"
		datatype : "Integer"
	}

	property "food:hasPriceRange" [0..1] {
		field-label : "Price range"
		field-label[de] : "Preisklasse"
		datatype : "String"
	}
	
	property "food:hasImage" [0..1] {
		field-label : "Image"
		field-label[de] : "Rezeptbild"
		datatype : "File"
	}
	
	property "food:hasCalories" [0..1] {
		field-label : "Calories per portion"
		field-label[de] : "Kalorien pro Portion"
		datatype : "Integer"
	}
	
	property "food:hasProtein" [0..1] {
		field-label : "Protein per portion"
		field-label[de] : "Eiweiß pro Portion"
		datatype : "Integer"
	}
	
	property "food:hasCarbohydrate" [0..1] {
		field-label : "Carbohydrate per portion"
		field-label[de] : "Kohlenhydrate pro Portion"
		datatype : "Integer"
	}
	
	property "food:hasFat" [0..1] {
		field-label : "Fat per portion"
		field-label[de] : "Fett pro Portion"
		datatype : "Integer"
	}
	
}

schema for "food:Machine" {

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Name"
		datatype : "String"
	}

	property "common:hasDescription" [0..1] {
		field-label : "Description"
		field-label[de] : "Beschreibung"
		datatype : "Text"
	}
}

schema for "food:TypeOfMeal" {

	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Name"
		datatype : "String"
	}

	property "common:hasDescription" [n..1] {
		field-label : "Description"
		field-label[de] : "Beschreibung"
		datatype : "Text"
	}
}

schema for "food:Producer" {

	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Name"
		datatype : "String"
	}

	property "common:hasDescription" [n..1] {
		field-label : "Description"
		field-label[de] : "Beschreibung"
		datatype : "Text"
	}
}

schema for "food:Ingredient" {

	label-rule : "common:hasAmount common:hasUnit common:hasIngredient"

	property "common:hasIngredient" [1..1] {
		field-label : "Ingredient"
		field-label[de] : "Zutat"
		datatype : "Resource"
		resource-constraint : "food:FoodProduct"
	}
	
	property "common:hasAmount" [1..1] {
		field-label : "Amount"
		field-label[de] : "Menge"
		datatype : "Integer"
		visualize {
			style : "width:40px" 
		}
	}
	
	property "common:hasUnit" [1..1] {
		field-label : "Unit"
		field-label[de] : "Einheit"
		datatype : "String"
	}
}

schema for "food:FoodProduct" {

	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Name"
		datatype : "String"
	}
}

schema for "food:Difficulty" {
	
	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Bezeichnung"
		datatype : "String"
	}
}
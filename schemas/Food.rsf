namespace "http://rb.lichtflut.de/common#"       prefix  "common"
namespace "http://rb.lichtflut.de/common/food/"  prefix  "food"

schema for "food:FoodProduct" {

	label-rule : "common:hasName"
					
	property "common:hasName" [1..1] {
		field-label : "Name"
		datatype : "String"
	}
	
	property "food:hasCalories" [1..1] {
		field-label : "Calories"
		field-label[de] : "Kalorien"
		datatype : "Integer"
	}
	
	property "common:hasCategory" [0..2] {
		field-label : "Category"
		field-label[de] : "Kategorie"
		datatype : "Resource"
		resource-constraint : "food:FoodCategory"
	}

	property "common:likedBy" [0..n] {
        field-label : "Liked by"
        field-label[de] : "Gemocht von"
        datatype : "Resource"
        resource-constraint : "common:Person"
    }

    property "common:dislikedBy" [0..n] {
        field-label : "Disliked by"
        field-label[de] : "Nicht gemocht von"
        datatype : "Resource"
        resource-constraint : "common:Person"
    }
	
	property "common:hasDescription" [0..1] {
		field-label : "Description"
		field-label[de] : "Beschreibung"
		datatype : "Text"
	}
}

schema for "food:FoodCategory" {

	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		datatype : "String"
	}

	property "food:hasSuperCategory" [1..1] {
		field-label : "Super category"
		field-label[de] : "Oberkategorie"
		datatype : "Resource"
		resource-constraint : "food:FoodCategory"
	}

	property "food:hasSubCategory" [1..n] {
   	    field-label : "Sub categories"
       	field-label[de] : "Unterkategorien"
       	datatype : "Resource"
       	resource-constraint : "food:FoodCategory"
    }

}

schema for "food:Recipe" {

	label-rule : "common:hasName <,> food:hasCountryOfOrigin"

	property "common:hasName" [1..1] {
		field-label : "Name"
		datatype : "String"
	}

	property "food:hasIngredients" [1..n] {
		field-label : "Ingredients"
		field-label[de] : "Zutaten"
		datatype : "Resource"
		resource-constraint : "food:FoodProduct"
	}

	property "food:hasProcessStep" [1..1] {
		field-label : "Process Step"
		field-label[de] : "Arbeitsschritt"

		datatype : "Text"
	}

	property "food:hasMachinery" [n..n] {
		field-label : "Machinery"
		field-label[de] : "KÃ¼chenmaschinen"

		datatype : "Resource"
		resource-constraint : "food:Machine"
	}

	property "food:hasTypeOfMeal" [1..1] {
		field-label : "Type of Meal"
		field-label[de] : "Kategorie"
	
		datatype : "Resource"
		resource-constraint : "food:TypeOfMeal"
	}

	property "food:hasPreparationTime" [n..1] {
		field-label : "Preparation Time"
		field-label[de] : "Zubereitungszeit"

		datatype : "Decimal"
	}

	property "food:hasDifficulty" [n..1] {
		field-label : "Degree of Difficulty"
		field-label[de] : "Schwierigkeitsgrad"

		datatype : "Resource"
		resource-constraint : "food:Difficulty"
	}

	property "food:hasCountryOfOrigin" [1..1] {
		field-label : "Country of Origin"
		field-label[de] : "Herkunftsland"

		datatype : "Resource"
		resource-constraint : "common:Country"
	}
}

schema for "food:Machine" {

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Name"

		datatype : "String"
	}

	property "common:hasDescription" [n..1] {
		field-label : "Description"
		field-label[de] : "Beschreibung"

		datatype : "Text"
	}
}

schema for "food:TypeOfMeal" {

	label-rule : "common:hasName"

	property "common:hasName" [1..1] {
		field-label : "Name"
		field-label[de] : "Name"

		datatype : "String"
	}

	property "common:hasDescription" [n..1] {
		field-label : "Description"
		field-label[de] : "Beschreibung"
		datatype : "Text"
	}
}

